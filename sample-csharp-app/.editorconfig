root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
csharp_style_var_elsewhere = true:suggestion
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_prefer_inferred_anonymous_type_member_names = true:suggestion
csharp_style_prefer_inferred_tuple_element_names = true:suggestion
csharp_style_prefer_braces = true:suggestion
csharp_style_prefer_switch_expression = true:suggestion
csharp_style_prefer_static_local_function = true:suggestion
csharp_style_prefer_is_pattern = true:suggestion
csharp_style_prefer_implicit_type = true:suggestion
csharp_style_prefer_ternary_over_if_else = true:suggestion

[*.json]
indent_style = space
indent_size = 2